{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*Controller.ts"],
  "spec": {
    "outputDirectory": "tsoa/swagger",
    "specVersion": 3,
    "basePath": "/api/v1",
    "securityDefinitions": {
      "jwt": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "routes": {
    "routesDir": "tsoa/routes",
    "middleware": "koa",
    "authenticationModule": "src/auth/authentication.ts"
  }
}
