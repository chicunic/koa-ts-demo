{
  "name": "koa-ts-demo",
  "version": "0.0.1",
  "description": "Demo of Koa with TypeScript",
  "author": "chicunic",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/app.ts",
    "start:dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
    "start:prod": "tsc && node dist/src/app.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "build": "tsoa spec-and-routes && tsc",
    "build:swagger": "tsoa spec-and-routes"
  },
  "main": "dist/app.js",
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@koa/router": "^12.0.0",
    "@tsoa/runtime": "^5.0.0",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-mount": "^4.0.0",
    "koa-session": "^6.4.0",
    "koa-static": "^5.0.0",
    "koa2-swagger-ui": "^5.9.1",
    "promise.any": "^2.0.6",
    "tsoa": "^5.1.1"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.3",
    "@types/koa": "^2.13.9",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-cors": "^0.0.3",
    "@types/koa-mount": "^4.0.3",
    "@types/koa-session": "^6.4.2",
    "@types/koa-static": "^4.0.2",
    "@types/koa__router": "^12.0.1",
    "@types/node": "^20.8.6",
    "@types/nodemon": "^1.19.3",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "concurrently": "^8.2.1",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
